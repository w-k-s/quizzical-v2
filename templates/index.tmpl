<!doctype html>
<html>
<head>
	<meta charset='utf-8'>
	<link rel="stylesheet" href="css/bootstrap.min.css" type="css">
	<title>
		Quizzical
	</title>
</head>
<body>
	<div class="container-fluid ">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="well bs-component">
					<div class="text-center">
						<img src="images/quizzical_logo.png" width="100" alt="logo" class="img-circle"/><br/>
						<h1>Quizzical</h1>
						<p class="lead">Administrator Panel</p>
					</div>
					<form method='post' action='login?forward=admin' class="form-horizontal">
						<fieldset>
							<legend>Sign In</legend>
							<div class="form-group">
								<label for="username" class="col-lg-2 control-label">Username</label>
								<div class="col-lg-8">
									<input type="text" class="form-control" id="username" name="username" placeholder="Username"/>
								</div>
							</div>
							<div class="form-group">
								<label for="password" class="col-lg-2 control-label">Password</label>
								<div class="col-lg-8">
									<input type="password" class="form-control" id="password" name="password" placeholder="Password"/>
								</div>
							</div>
							<div class="form-group">
								<div class="col-lg-offset-2 col-lg-10">
									<button type="submit" class="btn btn-primary">Submit</button>
								</div>
							</div>
							{{if not .Authenticated}}
							<div class="form-group">
								<div class="col-lg-offset-2 col-lg-8">
									<div class="alert alert-danger text-center">Incorrect username and/or password</div>
								</div>
							</div>
							{{end}}
						</fieldset>
					</form>
				</div>
				<div class="text-center">
					<small>Quizzical (C) Copyright 2013 - Waqqas Sheikh</small>
				</div>
			</div>
		</div>
	</div>
</body>
</html> 